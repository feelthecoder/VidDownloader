<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/statusimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:src="@drawable/out_of_order"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAppIcon"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_RecDisplayAllWebsites"
            android:layout_width="@dimen/image_size1"
            android:layout_height="@dimen/image_size1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vid_preview" />

        <TextView
            android:id="@+id/txtview_RecDisplayAllWebsites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
</RelativeLayout>
